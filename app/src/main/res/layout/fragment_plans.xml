<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.locationoptimizer.PlansFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_plan_info"
                android:textAlignment="center"
                android:textColor="#2d2d2d"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_select_info2"
                android:textAlignment="center"
                android:textColor="#2d2d2d"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/plan_search_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get a Plan!"/>

            <TextView
                android:id="@+id/plan_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/plan_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>
