<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/recycler_text"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="@string/recycle_text"/>

    <ToggleButton
        android:id="@+id/recycler_toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textOff="@string/recycle_select_off"
        android:textOn="@string/recycle_select_on"
        android:background="@color/unselect"/>

</LinearLayout>
